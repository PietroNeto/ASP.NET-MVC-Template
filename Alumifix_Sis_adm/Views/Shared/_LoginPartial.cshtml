@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@{
    bool IsAuthenticated = false;
    try {
        IsAuthenticated = HttpContextAccessor!.HttpContext!.User!.Identity!.IsAuthenticated;
    } catch {
        //nothing
    }
}

@if (IsAuthenticated)
{
    <div>
        <form asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
            <button type="submit" class="btn btn-link nav-link text-dark">Sign out</button>
        </form>
    </div>
}
else
{
    <div>
        <a class="nav-link text-dark" asp-controller="Home" asp-action="Login">Sign in</a>
    </div>
}
